{
  "name": "laser-feelings",
  "private": true,
  "description": "Lasers & Feelings App",
  "scripts": {
    "fix": "wireit",
    "start": "parcel",
    "test": "wireit"
  },
  "license": "MIT",
  "devDependencies": {
    "parcel": "^2.10.3",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "tailwindcss": "^3.3.6",
    "wireit": "^0.14.1"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "source": [
    "src/index.html"
  ],
  "wireit": {
    "fix": {
      "dependencies": [
        "fix:format"
      ]
    },
    "fix:format": {
      "command": "prettier --cache --write 'src/**/*' '*.{md,ts}'"
    },
    "test": {
      "dependencies": [
        "test:format"
      ]
    },
    "test:format": {
      "command": "prettier --cache --check 'src/**/*' '*.{md,ts}'",
      "files": [
        "src/**/*",
        "*.{md,ts}",
        "!src/assets/*"
      ],
      "output": []
    }
  }
}
