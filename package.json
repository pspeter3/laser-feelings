{
  "name": "laser-feelings",
  "private": true,
  "description": "Lasers & Feelings App",
  "scripts": {
    "build": "parcel build", 
    "fix": "wireit",
    "start": "parcel",
    "test": "wireit"
  },
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.56.0",
    "parcel": "^2.10.3",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "sharp": "^0.31.3",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "wireit": "^0.14.1"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "root": true
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "source": [
    "src/index.html"
  ],
  "wireit": {
    "fix": {
      "dependencies": [
        "fix:format",
        "fix:lint"
      ]
    },
    "fix:format": {
      "command": "prettier --cache --write 'src/**/*' '*.{md,ts}'",
      "dependencies": [
        "fix:lint"
      ]
    },
    "fix:lint": {
      "command": "eslint --fix --cache 'src/**/*.{ts,tsx}'"
    },
    "test": {
      "dependencies": [
        "test:format",
        "test:lint",
        "test:types"
      ]
    },
    "test:format": {
      "command": "prettier --cache --check 'src/**/*' '*.{md,ts}'",
      "files": [
        "src/**/*",
        "*.{md,ts}",
        "!src/assets/*"
      ],
      "output": []
    },
    "test:lint": {
      "command": "eslint --color --cache 'src/**/*.{ts,tsx}'",
      "files": [
        "src/**/*.{ts,tsx}"
      ],
      "output": []
    },
    "test:types": {
      "command": "tsc --build --pretty",
      "files": [
        "src/**/*.{ts,tsx}",
        "tsconfig.json"
      ],
      "output": [
        "tsconfig.tsbuildinfo"
      ]
    }
  }
}
